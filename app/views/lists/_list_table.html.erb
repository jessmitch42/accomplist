<table class="user_list_table">
  <% @list.items.each do |item| %>
    <% if !item.title.blank? %> <!--don't include one built for this form -->
      <tr>
        <td><%= link_to item.title, list_item_path(@list, item) %></td>
        <td><%= item.points %> Points</td>
        <td><%= link_to "X", [@list, item], :confirm => "Are you sure?", :method => :delete %>
        </td>
      </tr>
    <% end %>
  <% end %>
  <%= render 'partials/total_points_tr', locals: {list: @list} %>
</table>
